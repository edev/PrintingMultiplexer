<Application x:Class="Printing_Multiplexer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Printing_Multiplexer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="6,6,6,4" />
            <Setter Property="Padding" Value="0" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="6,0,6,0" />
            <Setter Property="Padding" Value="4" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6,6,6,0" />
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Margin" Value="3,12" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="6,6,0,6" />
        </Style>
    </Application.Resources>
</Application>
